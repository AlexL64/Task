<Window x:Class="Task.View.AddTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task.View"
        mc:Ignorable="d"
        Title="AddTask" Height="450" Width="800">
    <Grid>
        <TextBox Name="Title" Height="64" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10,10,10,0" Background="#F00" TextAlignment="Center" FontSize="20" VerticalContentAlignment="Center"></TextBox>

        <TextBox Name="Description"  Margin="10,84,10,74" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"></TextBox>

        <Grid Height="64" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <Button Background="#2e82db" BorderThickness="0" Height="32" Width="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="16" Cursor="Hand" FontSize="16" FontWeight="Bold" Foreground="White" Click="Save">
                Save
            </Button>
        </Grid>
    </Grid>
</Window>
